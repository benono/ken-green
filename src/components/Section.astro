---
import "../styles/global.css";
export interface Props {
  title?: string;
  subtitle?: string;
  background?: "light" | "dark" | "primary" | "none";
  id?: string;
}

const { title, subtitle, background = "none", id } = Astro.props;

// 背景色のクラスマッピング
const bgClasses = {
  light: "bg-gray-50",
  dark: "bg-gray-800 text-white",
  primary: "bg-primary text-white",
  none: "",
};
---

<section id={id} class={`section ${bgClasses[background]}`}>
  <div class="container mx-auto px-4">
    {
      title && (
        <div class="mb-12 text-center">
          <h2
            class={`section-title ${background === "dark" || background === "primary" ? "text-white" : ""}`}
          >
            {title}
          </h2>
          {subtitle && (
            <p
              class={`text-lg max-w-3xl mx-auto ${
                background === "dark"
                  ? "text-gray-300"
                  : background === "primary"
                    ? "text-white opacity-90"
                    : "text-gray-600"
              }`}
            >
              {subtitle}
            </p>
          )}
        </div>
      )
    }
    <div>
      <slot />
    </div>
  </div>
</section>
