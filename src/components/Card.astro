---
export interface Props {
  title?: string;
  image?: string;
  alt?: string;
  href?: string;
}

const { title, image, alt = "", href } = Astro.props;

const CardTag = href ? "a" : "div";
---

<CardTag
  href={href}
  class={`bg-white rounded-lg overflow-hidden shadow-md h-full flex flex-col transition-all duration-300 
    ${href ? "no-underline text-inherit hover:-translate-y-1 hover:shadow-lg" : ""}`}
>
  {
    image && (
      <div class="w-full overflow-hidden">
        <img
          src={image}
          alt={alt}
          loading="lazy"
          class="w-full h-auto block aspect-video object-cover transition-transform duration-300 hover:scale-105"
        />
      </div>
    )
  }
  <div class="p-6 flex-grow flex flex-col">
    {title && <h3 class="text-xl font-semibold mb-3 text-gray-800">{title}</h3>}
    <div class="text-gray-600 leading-relaxed flex-grow">
      <slot />
    </div>
  </div>
</CardTag>

